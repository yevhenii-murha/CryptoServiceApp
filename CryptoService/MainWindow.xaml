<Window x:Class="CryptoService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptoService"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView ItemsSource="{Binding Cryptos}" Margin="10,10,10,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Symbol" DisplayMemberBinding="{Binding Symbol}" />
                    <GridViewColumn Header="Price (USD)" DisplayMemberBinding="{Binding PriceUsd}" />
                    <GridViewColumn Header="Market Cap (USD)" DisplayMemberBinding="{Binding MarketCapUsd}" />
                    <GridViewColumn Header="Volume (24h)" DisplayMemberBinding="{Binding VolumeUsd24Hr}" />
                    <GridViewColumn Header="Change (24h)" DisplayMemberBinding="{Binding ChangePercent24Hr}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
